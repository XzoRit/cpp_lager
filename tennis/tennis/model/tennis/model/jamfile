project model
    ;

constant test_sources
    : [ glob *.test.cpp ]
    ;

constant sources
    : [ glob *.cpp : $(test_sources) ]
    ;

import boost
    ;

boost.use-project
    ;

lib model
    : $(sources)
    : <include>../..
    :
    : <include>../..
    ;

import testing
    ;

run $(test_sources)
    : --color_output=false
    :
    : <library>model
      <use>/boost//headers
    : test
    ;
