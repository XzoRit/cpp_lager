project tennis_app
    ;

import testing
    ;

import boost
    ;

boost.use-project
    ;

exe tennis_console_app_exe
    : console_app.cpp
      /boost//program_options
      /external//lager
      /tennis/model//model
      /tennis/view//console_view
    ;

unit-test tennis_console_app_run
    : tennis_console_app_exe
    : <testing.arg>"--help"
    ;

exe tennis_imgui_app_exe
    : imgui_app.cpp
      /tennis/view//imgui_view
      /external//imgui
      /external//sdl2
      /external//lager
    ;

unit-test tennis_imgui_app_run
    : tennis_imgui_app_exe
    ;

always tennis_imgui_app_run
    ;
