project tennis_console_app
    ;

constant sources
    : [ glob *.cpp ]
    ;

import boost
    ;

boost.use-project
    ;

exe tennis_console_app_exe
    : $(sources)
      /boost//program_options
      /external//lager
      /tennis/model//model
      /tennis/view//console_view
    ;

import testing
    ;

unit-test tennis_console_app_run
    : tennis_console_app_exe
    : <testing.arg>"--help"
    ;
