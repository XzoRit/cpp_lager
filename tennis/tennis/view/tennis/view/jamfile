project console_view
    ;

constant test_sources
    : [ glob *.test.cpp ]
    ;

constant sources
    : [ glob *.cpp : $(test_sources) ]
    ;

import boost
    ;

boost.use-project
    ;

lib console_view
    : $(sources)
      /tennis/model//model
      /boost//program_options
    : <include>../..
    :
    : <include>../..
      <library>/tennis/model//model
      <library>/boost//program_options
    ;

import testing
    ;

run $(test_sources)
    : --color_output=false
    :
    : <library>console_view
      <use>/boost//headers
    : test
    ;
