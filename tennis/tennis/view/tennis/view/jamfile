project console_view
    : usage-requirements <include>../..
    ;

constant test_sources
    : [ glob *.test.cpp ]
    ;

constant sources
    : [ glob *.cpp : $(test_sources) ]
    ;

lib console_view
    : $(sources)
      /tennis/model//model
    : <include>../..
    :
    ;

import boost
    ;

boost.use-project
    ;

import testing
    ;

run $(test_sources)
    : --color_output=true --log_level=success
    :
    : <library>console_view
      <use>/boost//headers
    : test
    ;
