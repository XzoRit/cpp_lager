constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/tennis/view
    ;

project view
    ;

constant console_view_test_sources
    : $(src_dir)/console.test.cpp
    ;

constant console_view_sources
    : $(src_dir)/console.cpp
    ;

import boost
    ;

boost.use-project
    ;

lib console_view
    : $(console_view_sources)
      /tennis/model//tennis_model
      /boost//program_options
    : <include>$(inc_dir)
    :
    : <include>$(inc_dir)
      <library>/tennis/model//tennis_model
      <library>/boost//program_options
    ;

import testing
    ;

run $(console_view_test_sources)
    $(src_dir)/main.test.cpp
    : --color_output=false
    :
    : <library>console_view
      <use>/boost//headers
    : console_view_test
    ;

lib imgui_view
    : $(src_dir)/imgui.cpp
    : <include>$(inc_dir)
      <library>/external//imgui
    :
    : <include>$(inc_dir)
    ;
