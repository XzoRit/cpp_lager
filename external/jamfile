import boost
    ;

boost.use-project
    ;

lib sdl2
    :
    : <name>SDL2
      <search>/usr/lib/x86_64-linux-gnu
    ;

lib gl
    :
    : <name>GL
      <search>/usr/lib
    ;

alias zug
    :
    :
    :
    : <include>./zug
      <cxxflags>-std=c++17
    ;

alias lager
    :
    :
    :
    : <include>./lager
      <cxxflags>-std=c++17
      <library>zug
      <use>/boost//headers
      <library>sdl2
    ;

constant imgui_sources
    : [ glob ./imgui/*.cpp ]
    ;

lib imgui
    : $(imgui_sources)
    :
    :
    : <include>./imgui
      <cxxflags>-std=c++17
      <library>sdl2
      <library>gl
    ;
