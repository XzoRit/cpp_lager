import boost
    ;

boost.use-project
    ;

alias zug
    :
    :
    :
    : <include>./zug
      <cxxflags>-std=c++17
    ;

alias lager
    :
    :
    :
    : <include>./lager
      <cxxflags>-std=c++17
      <library>zug
      <use>/boost//headers
      <library>/site-config//sdl2
    ;

constant imgui_sources
    : [ glob ./imgui/*.cpp ]
    ;

lib imgui
    : $(imgui_sources)
    :
    :
    : <include>./imgui
      <cxxflags>-std=c++17
      <library>/site-config//sdl2
      <library>/site-config//gl
    ;
