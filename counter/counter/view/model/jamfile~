import boost
    ;

boost.use-project
    ;

constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/counter/view
    ;


lib view_model
    : $(src_dir)/model/model.cpp
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
    :
    : <library>/counter/model//counter_model
    :
    ;

lib console_view
    : $(src_dir)/gui/console.cpp
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
      <library>/boost//program_options
    :
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
      <library>/boost//program_options
    ;

lib imgui_view
    : $(src_dir)/gui/imgui.cpp
    : <include>$(inc_dir)
      <library>view_model
      <library>/external//imgui
      <library>/external//lager
    :
    : <include>$(inc_dir)
      <library>view_model
      <library>/external//imgui
