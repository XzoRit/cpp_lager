import boost
    ;

boost.use-project
    ;

constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/counter/view
    ;

lib console_view
    : $(src_dir)/console.cpp
      /counter/model//counter_model
      /boost//program_options
    : <include>$(inc_dir)
    :
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
      <library>/boost//program_options
    ;

lib imgui_view
    : $(src_dir)/imgui.cpp
      /counter/model//counter_model
      /external//imgui
      /external//lager
    : <include>$(inc_dir)
    :
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
      <library>/external//imgui
      <library>/external//lager
    ;
