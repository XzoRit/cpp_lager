constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/counter/view
    ;

constant console_view_sources
    : $(src_dir)/console.cpp
    ;

import boost
    ;

boost.use-project
    ;

lib console_view
    : $(console_view_sources)
      /counter/model//counter_model
      /boost//program_options
    : <include>$(inc_dir)
    :
    : <include>$(inc_dir)
      <library>/counter/model//counter_model
      <library>/boost//program_options
    ;

lib imgui_view
    : $(src_dir)/imgui.cpp
    : <include>$(inc_dir)
      <library>/external//imgui
    :
    : <include>$(inc_dir)
    ;
