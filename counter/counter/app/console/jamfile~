import testing
    ;

import boost
    ;

boost.use-project
    ;

exe counter_console_app_exe
    : console_app.cpp
    : <library>/boost//program_options
      <library>/counter/model//counter_model
      <library>/counter/gui_console//lib
    ;

unit-test counter_console_app_run
    : counter_console_app_exe
    : <testing.arg>"--help"
    ;

always counter_console_app_run
    ;

exe counter_imgui_app_exe
    : imgui_app.cpp
    : <library>/counter/gui_imgui//lib
      <library>/external//imgui
      <library>/external//lager
      <library>/site-config//sdl2
    ;

unit-test counter_imgui_app_run
    : counter_imgui_app_exe
    ;

always counter_imgui_app_run
    ;
