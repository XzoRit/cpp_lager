import testing
    ;

import boost
    ;

boost.use-project
    ;

exe exe
    : main.cpp
    : <library>/boost//program_options
      <library>/counter/view_model//lib
      <library>/counter/gui_console//lib
      <library>/external//lager
    ;

unit-test run
    : exe
    : <testing.arg>"--help"
    ;

always run
    ;

